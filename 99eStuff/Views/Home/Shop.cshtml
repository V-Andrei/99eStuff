
@{
    ViewBag.Title = "Shop";
}

@model List<_99eStuff.Models.ProductsListViewModel>
<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <title>Shop Page || 99eStuff</title>
</head>

<body>

    <!-- Start Bradcaump area -->
    <div class="ht__bradcaump__area" style="background: rgba(0, 0, 0, 0) url(../../Content/img/shop/shopBg.png) no-repeat scroll center center;">
        <div class="ht__bradcaump__wrap">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="bradcaump__inner text-center">
                            <h2 class="bradcaump-title">Shop Page</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Bradcaump area -->
    <!-- Start Our Product Area -->
    <section class="htc__product__area shop__page ptb--130 bg__white">
        <div class="container">
            <div class="htc__product__container">
                <!-- Start Product MEnu -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="filter__menu__container">
                            <div class="product__menu">
                                <button data-filter="*" class="is-checked">All</button>
                                <button data-filter=".cat--Security">Security</button>
                                <button data-filter=".cat--Bags">Bags</button>
                                <button data-filter=".cat--Comforts">Comforts</button>
                                <button data-filter=".cat--Accessories">Accessories</button>
                            </div>
                            <div class="filter__box">
                                <a class="filter__menu" href="#">filter</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Filter Menu -->
                <div class="filter__wrap">
                    <div class="filter__cart">
                        <div class="filter__cart__inner">
                            <div class="filter__menu__close__btn">
                                <a href="#"><i class="zmdi zmdi-close"></i></a>
                            </div>
                            <div class="filter__content">
                                <!-- Start Single Content -->
                                <div class="fiter__content__inner">
                                    <div class="single__filter">
                                        <h2>Sort By</h2>
                                        <ul class="filter__list">
                                            <li><a href="#default">Default</a></li>
                                            <li><a href="#accessories">Accessories</a></li>
                                            <li><a href="#bags">Bags</a></li>
                                            <li><a href="#chair">Chair</a></li>
                                            <li><a href="#decoration">Decoration</a></li>
                                            <li><a href="#fashion">Fashion</a></li>
                                        </ul>
                                    </div>
                                    <div class="single__filter">
                                    </div>
                                    <div class="single__filter">
                                        <h2>Tags</h2>
                                        <ul class="filter__list">
                                            <li><a href="#">All</a></li>
                                            <li><a href="#">Accessories</a></li>
                                            <li><a href="#">Bags</a></li>
                                            <li><a href="#">Chair</a></li>
                                            <li><a href="#">Decoration</a></li>
                                            <li><a href="#">Fashion</a></li>
                                        </ul>
                                    </div>
                                    <div class="single__filter">
                                        <h2>Price</h2>
                                        <ul class="filter__list">
                                            <li><a href="#">$0.00 - $50.00</a></li>
                                            <li><a href="#">$50.00 - $100.00</a></li>
                                            <li><a href="#">$100.00 - $150.00</a></li>
                                            <li><a href="#">$150.00 - $200.00</a></li>
                                            <li><a href="#">$300.00 - $500.00</a></li>
                                            <li><a href="#">$500.00 - $700.00</a></li>
                                        </ul>
                                    </div>
                                    <div class="single__filter">
                                        <h2>Color</h2>
                                        <ul class="filter__list sidebar__list">
                                            <li class="black"><a href="#"><i class="zmdi zmdi-circle"></i>Black</a></li>
                                            <li class="blue"><a href="#"><i class="zmdi zmdi-circle"></i>Blue</a></li>
                                            <li class="brown"><a href="#"><i class="zmdi zmdi-circle"></i>Brown</a></li>
                                            <li class="red"><a href="#"><i class="zmdi zmdi-circle"></i>Red</a></li>
                                            <li class="orange"><a href="#"><i class="zmdi zmdi-circle"></i>Orange</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- End Single Content -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Filter Menu -->
                <!-- End Product MEnu -->
                <div class="row product__list">
                    <!-- Start Single Product -->
                    @foreach (var product in Model)
                    {
                        <div class="col-md-4 single__pro col-lg-3 cat--@product.Category col-sm-12">
                            <div class="product foo">
                                <div class="product__inner">
                                    <div class="pro__thumb">
                                        <a href="@Url.Action("ProductDetails","Pages")">
                                            @{
                                                var base64 = Convert.ToBase64String(product.SmallPicture);
                                                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                                            }
                                            <img src="@imgsrc" alt="product images">
                                        </a>
                                    </div>
                                    <div class="product__hover__info">
                                        <ul class="product__action">
                                            <li><a title="View More" href="@Url.Action("ProductDetails","Pages", new { id = product.ID}, null)"><span class="ti-plus"></span></a></li>
                                            <li><a title="Add TO Cart" href=@Url.Action("Cart","Pages")><span class="ti-shopping-cart"></span></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="product__details">
                                    <h2><a href="@Url.Action("ProductDetails","Pages",new { id = product.ID}, null)">@product.NameProduct</a></h2>
                                    <ul class="product__price">
                                        <li class="old__price">$@product.OldPrice</li>
                                        <li class="new__price">$@product.CurrentPrice</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- End Single Product -->
                </div>
                <!-- Start Load More BTn -->
                <div class="row mt--60">
                    <div class="col-md-12">
                        <div class="htc__loadmore__btn">
                            <a href="#">load more</a>
                        </div>
                    </div>
                </div>
                <!-- End Load More BTn -->
            </div>
        </div>
    </section>
    <!-- End Our Product Area -->
    <!-- Body main wrapper end -->
</body>

</html>